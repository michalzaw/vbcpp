<?xml version="1.0"?>
<!-- <!DOCTYPE PLAY SYSTEM "play.dtd"> -->

<Game>
	<Resolution x="1280" y="768" />


	<Map name="Demo" />
	
	<Bus model="h9_raycast" />
	
	<Configuration>
		<Fullscreen>0</Fullscreen><!-- 0 - window, 1 - fullscreen, 2 - windowed fullscreen -->
		<VerticalSync>true</VerticalSync>
		
		<HdrQuality>16</HdrQuality>
		<MsaaAntialiasing>true</MsaaAntialiasing>
		<MsaaAntialiasingLevel>4</MsaaAntialiasingLevel>
		
		<Bloom>true</Bloom>
		
		<Shadowmapping>true</Shadowmapping>
        <ShadowmapSize>2048</ShadowmapSize>
		
		<Grass>false</Grass>
		<GrassRenderingDistance>30.0</GrassRenderingDistance>
		
		<Mirrors>true</Mirrors>
		<MirrorSize>256.0</MirrorSize>
		<MirrorRenderingDistance>100.0</MirrorRenderingDistance>
		<MirrorRefreshDistance>5.0</MirrorRefreshDistance>

		<TextureCompression>true</TextureCompression>
		<AnisotropicFiltering>false</AnisotropicFiltering>
		<AnisotropySamples>4</AnisotropySamples>
		
		<PbrSupport>false</PbrSupport>

		<OpenGlDebugContext>false</OpenGlDebugContext>

		<LoggerLevel>DEBUG</LoggerLevel>
		<LoggerConsoleOutput>true</LoggerConsoleOutput>
		<LoggerFileOutput>log.txt</LoggerFileOutput>

		<Language>pl</Language>
    </Configuration>
</Game>
